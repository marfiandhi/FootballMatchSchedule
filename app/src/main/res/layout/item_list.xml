<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_white">

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        android:layout_marginBottom="8dp"
        android:textSize="12sp"
        android:text="Sab, 07 Mar 1998"
        android:textColor="@color/red"/>

    <TextView
        android:id="@+id/vs"
        android:layout_below="@id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:text="vs"/>

    <TextView
        android:id="@+id/scoreTeamA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date"
        android:layout_toStartOf="@id/vs"
        android:textStyle="bold"
        android:layout_marginHorizontal="4dp"
        android:text="0"/>

    <TextView
        android:id="@+id/TeamA"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_below="@id/date"
        android:layout_toStartOf="@id/scoreTeamA"
        android:text="Huddersfield"/>

    <TextView
        android:id="@+id/scoreTeamB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date"
        android:layout_toEndOf="@id/vs"
        android:textStyle="bold"
        android:layout_marginHorizontal="4dp"
        android:text="0"/>

    <TextView
        android:id="@+id/TeamB"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_below="@id/date"
        android:layout_toEndOf="@id/scoreTeamB"
        android:text="Man City"/>

</RelativeLayout>